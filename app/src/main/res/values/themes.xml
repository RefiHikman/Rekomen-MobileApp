<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.RekomenApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainOrange</item>
        <item name="colorPrimaryVariant">@color/mainOrange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryOrange</item>
        <item name="colorSecondaryVariant">@color/secondaryOrange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Customize your theme here. -->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>-->
<!--        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>-->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:focusable">false</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:textSize">12sp</item>
        <item name="queryBackground">@drawable/rounded_edit</item>
        <item name="autoShowKeyboard">true</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="profileImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">100dp</item>
    </style>

    <style name="cardProfile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">55dp</item>
    </style>

    <style name="gridItemImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">#4F4F4F</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>