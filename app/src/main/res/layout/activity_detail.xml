<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_gradient"
        android:translationZ="2dp" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:paddingRight="4dp"
        android:paddingVertical="5dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_plus_btn_main"
        android:src="@drawable/ic_back"
        android:translationZ="3dp"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/moreBtn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_plus_btn_main"
        android:src="@drawable/ic_dots"
        android:translationZ="3dp"
        app:tint="@color/white"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@color/icon"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:background="@drawable/rounded_detail"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/judul"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="3"
            android:text="Mie Ayam Pak Haji Selamet yang enak dan menggoda"
            android:textColor="#1D2132"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bintang"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/rating"
            android:tint="@android:color/holo_orange_dark"
            app:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/poppins"
            android:text="4.9"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/gd1"
            android:layout_below="@id/judul"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="Mie ayam ini memliki rasa yang autentik dan berbeda dari mie ayam yang lain, toping nya yang melimpah."
                android:textSize="12dp" />

        </ScrollView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gd1"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_above="@id/bottomLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/gridItemImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gd2"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_above="@id/bottomLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/gridItemImage" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gd3"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:layout_above="@id/bottomLayout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/gridItemImage" />

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Rp. 5000"
                android:textColor="#1D2132"
                android:textSize="24dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/komentar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_plus_btn_secondary"
                android:backgroundTint="@color/secondaryOrange"
                android:fontFamily="@font/poppins"
                android:text="Komentar"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>