<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".activities.ProfileActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/mainOrange">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/g1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/icon1"
                    android:scaleType="centerCrop"
                    android:translationZ="2dp"
                    app:shapeAppearanceOverlay="@style/profileImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/secondaryOrange"
                    app:shapeAppearanceOverlay="@style/profileImageView" />

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_plus_btn_main"
                    android:paddingVertical="5dp"
                    android:paddingRight="4dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_back" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/t2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="---"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="30dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="2"
                    android:text="---"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/logoutBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/rounded_btn_main"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_logout"
                        android:tint="@color/white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logoutBtn"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/jp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Profile"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Edit"
                                android:textColor="#FFA45B"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/g4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/jp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                app:srcCompat="@drawable/img_5" />

                            <TextView
                                android:id="@+id/s1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/g4"
                                android:layout_marginTop="4dp"
                                android:layout_toRightOf="@id/g4"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins_semibold"
                                android:maxLines="1"
                                android:text="---"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/s2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/s1"
                                android:layout_toRightOf="@id/g4"
                                android:fontFamily="@font/poppins_light"
                                android:text="Umur"
                                android:textColor="#BBBBBB"
                                android:textSize="12dp" />

                            <ImageView
                                android:id="@+id/g5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/g4"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                app:srcCompat="@drawable/img_7" />

                            <TextView
                                android:id="@+id/a1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/g5"
                                android:layout_marginTop="4dp"
                                android:layout_toRightOf="@id/g5"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins_semibold"
                                android:maxLines="1"
                                android:text="---"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/a2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/a1"
                                android:layout_toRightOf="@id/g5"
                                android:fontFamily="@font/poppins_light"
                                android:text="Lokasi"
                                android:textColor="#BBBBBB"
                                android:textSize="12dp" />

                            <ImageView
                                android:id="@+id/g6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/g5"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                app:srcCompat="@drawable/img_8" />

                            <TextView
                                android:id="@+id/b1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/g6"
                                android:layout_marginTop="4dp"
                                android:layout_toRightOf="@id/g6"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins_semibold"
                                android:maxLines="1"
                                android:text="---"
                                android:textColor="#000000"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/b2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/b1"
                                android:layout_toRightOf="@id/g6"
                                android:fontFamily="@font/poppins_light"
                                android:text="Bio"
                                android:textColor="#BBBBBB"
                                android:textSize="12dp" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/reviewku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardView1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Reviewku"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                        android:id="@+id/dotsIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/profileRv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:translationZ="2dp"
                        app:spi_dotColor="@color/icon"
                        app:spi_dotSelectedColor="@color/mainOrange"
                        app:spi_dotSelectedSize="7dp"
                        app:spi_dotSize="5dp"
                        app:spi_dotSpacing="7dp" />

                    <TextView
                        android:id="@+id/seeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/profileRv"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="See All"
                        android:textColor="@color/mainOrange"
                        android:textSize="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/profileRv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/reviewku"
                        android:orientation="horizontal"
                        tools:listitem="@layout/profile_list_item" />
                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>